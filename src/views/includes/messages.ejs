<% if (errors.length > 0) { %>
<div class="row" id="flash-error">
  <div class="col my-3">
    <div class="alert alert-danger">
      <% errors.forEach(error => { %> <%= error %><br />
      <% }); %>
    </div>
  </div>
</div>
<script>
  setTimeout(function () {
    document.getElementById('flash-error').style.display = 'none';
  }, 10000); // 10 seconds
</script>
<% } %>
