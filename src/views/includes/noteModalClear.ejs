<div
  class="modal fade"
  id="modalClear"
  tabindex="-1"
  aria-labelledby="modalClearLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content bg-dark">
      <form method="POST">
        <input type="hidden" name="action" value="clearNotes" />
        <div class="modal-header">
          <h5 class="modal-title" id="myModalLabel">Clear Notes</h5>
          <button
            type="button"
            class="btn-close btn-close-white"
            data-bs-dismiss="modal"
            aria-label="Close"
            style="color: white"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">Are you sure you want to clear your notes?</div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button type="submit" class="btn btn-danger" id="clear-button">
            Yes, clear notes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
