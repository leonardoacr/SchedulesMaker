<% const days = ['monday', 'tuesday', 'wednesday', 'thursday', 'friday',
'saturday', 'sunday'] %> <% for (let day of days) { %>
<div class="col">
  <form action="/schedules" method="post">
    <label class="p-3 border container-day border-dark" style="cursor: pointer">
      <h2 class="days-text"><%= day.toUpperCase() %></h2>
      <input type="hidden" name="day" value="<%= day %>" />
      <input type="submit" style="display: none" />
    </label>
  </form>
</div>
<% } %>
