<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mdt-5 bg-dark" style="color: white">
        <div class="card-body">
          <!-- <form> -->
          <div class="form-group">
            <label for="hours">Hour:</label>
            <input
              type="number"
              id="hoursCreate"
              min="0"
              max="12"
              value="0"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <label for="minutes">Minutes:</label>
            <input
              type="number"
              id="minutesCreate"
              min="0"
              max="59"
              value="0"
              class="form-control"
            />
          </div>
          <br />
          <div
            class="form-group"
            style="width: 100%; display: flex; justify-content: center"
          >
            <div class="form-group form-check form-check-inline">
              <input
                type="radio"
                id="periodCreate"
                name="periodCreate"
                value="am"
                class="form-check-input"
                checked
              />
              <label for="am" class="form-check-label">AM</label>
            </div>
            <div class="form-group form-check form-check-inline">
              <input
                type="radio"
                id="periodCreate"
                name="periodCreate"
                value="pm"
                class="form-check-input"
              />
              <label for="pm" class="form-check-label">PM</label>
            </div>
          </div>
          <!-- </form> -->
          <input
            type="hidden"
            id="clock-display-create-hidden"
            name="clockDisplayCreate"
            value=""
          />
          <div
            id="clock-display-create"
            class="fs-2 mt-4 text-center"
            style="color: rgb(7, 112, 7)"
          ></div>
        </div>
      </div>
    </div>
  </div>
</div>
